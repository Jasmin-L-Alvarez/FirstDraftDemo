            <div class="col-sm-12">
              <h3 class="text-center"> SUPER MEMES BOARD</h3>

              <div class="col-sm-6">
                <h2>Add a Meme :) </h2>
              <% if (user.local.email) { %>
                <form id="userInput"action="/messages" method="POST">
                  <input type="text" value="<%= user.local.email %>" name="name">
                  <input type="text" placeholder="PHOTO URL" name="src">
                  <button type="submit">Submit</button>
                </form>
              </div>
              <% } %>
      
      </div>
              <ul class="messages">
              <% for(var i=0; i<messages.length; i++) {%>
                <li class="message">
                  <p><%= messages[i].name %></p>
                  <img src=<%= "" + messages[i].src %> >
                  <p><%= messages[i].msg %></p>
                  <span><%= messages[i].value %></span>
                  <span><i class="fa fa-thumbs-up thumbs" aria-hidden="true"></i></span>
                  <span><i class="fa fa-thumbs-down thumbs" aria-hidden="true"></i></span>
